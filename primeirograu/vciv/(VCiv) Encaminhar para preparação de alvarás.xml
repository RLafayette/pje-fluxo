<?xml version="1.0" encoding="ISO-8859-1"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2" name="(VCiv) Encaminhar para preparação de alvarás">
    <description><![CDATA[.......]]></description>  
    <!-- SWIMLANES -->
    <swimlane name="Secretaria">
        <assignment pooled-actors="#{localizacaoAssignment.getPooledActors('5:1338')}"/>
    </swimlane>  
    <!-- START-STATE -->
    <start-state name="Início">
        <task name="Tarefa inicial"/>
        <transition to="(VCiv) Informar quantidade de alvarás" name="(VCiv) Informar quantidade de alvarás"/>
    </start-state>  
    <!-- NODES -->
    <task-node end-tasks="true" name="(VCiv) Informar quantidade de alvarás">
        <task name="(VCiv) Informar quantidade de alvarás" swimlane="Secretaria">
            <controller>
                <variable name="quantidadeAlvaras" mapped-name="number:quantidadeAlvaras" access="read,write"/>
            </controller>
        </task>
        <transition to="Nó de Desvio - (VCiv) Encaminhar para preparação de alvarás" name="Nó de Desvio - (VCiv) Encaminhar para preparação de alvarás">
            <condition expression="#{true}"/>
        </transition>
        <transition to="(VCiv) Apagar variaveis de fluxo" name="Cancelar e sair da tarefa"/>
        <transition to="(VCiv) Quantidade de alvarás está vazio?" name="Enviar para elaboração de alvará"/>
        <event type="task-start">
            <action expression="#{tramitacaoProcessualService.gravaVariavel('pje:fluxo:quantAlv', 0)}"/>
        </event>
        <event type="task-end">
            <action expression="#{tramitacaoProcessualService.apagaVariavelTarefa('pje:fluxo:transicao:dispensaRequeridos')}"/>
            <action expression="#{tramitacaoProcessualService.apagaVariavelTarefa('mostrarBotaoGravarNoFluxo')}"/>
        </event>
        <event type="task-create">
            <action expression="#{tramitacaoProcessualService.gravaVariavelTarefa('pje:fluxo:transicao:dispensaRequeridos', 'Cancelar e sair da tarefa')}"/>
            <action expression="#{tramitacaoProcessualService.gravaVariavelTarefa('mostrarBotaoGravarNoFluxo', false)}"/>
        </event>
    </task-node>
    <decision expression="#{(not empty tramitacaoProcessualService.recuperaVariavel('quantidadeAlvaras') and tramitacaoProcessualService.recuperaVariavel('quantidadeAlvaras') != 0 and tramitacaoProcessualService.recuperaVariavel('quantidadeAlvaras') &lt; 100) ? '(VCiv) Enviar para elaboração de alvará?' : '(VCiv) Informar quantidade de alvarás'}" name="(VCiv) Quantidade de alvarás está vazio?">
        <transition to="(VCiv) Informar quantidade de alvarás" name="(VCiv) Informar quantidade de alvarás"/>
        <transition to="(VCiv) Enviar para elaboração de alvará?" name="(VCiv) Enviar para elaboração de alvará?"/>
    </decision>
    <decision expression="#{tramitacaoProcessualService.recuperaVariavel('pje:fluxo:quantAlv') == (tramitacaoProcessualService.recuperaVariavel('quantidadeAlvaras') ) ? '(VCiv) Aguardando expedição de alvará(s)': '(VCiv) Encaminhar para elaboração de alvarás'}" name="(VCiv) Enviar para elaboração de alvará?">
        <transition to="(VCiv) Encaminhar para elaboração de alvarás" name="(VCiv) Encaminhar para elaboração de alvarás"/>
        <transition to="(VCiv) Aguardando expedição de alvará(s)" name="(VCiv) Aguardando expedição de alvará(s)"/>
    </decision>
    <node name="(VCiv) Encaminhar para elaboração de alvarás">
        <transition to="(VCiv) Enviar para elaboração de alvará?" name="(VCiv) Enviar para elaboração de alvará?"/>
        <event type="node-leave">
            <action expression="#{tramitacaoProcessualService.gravaVariavel('pje:fluxo:quantAlv', tramitacaoProcessualService.recuperaVariavel('pje:fluxo:quantAlv')+1)}"/>
        </event>
        <event type="node-enter">
            <action expression="#{processoJudicialService.incluirNovoFluxo(tramitacaoProcessualService.recuperaProcesso(), 'VCiv_ELAB_ALV', processInstance.contextInstance.variables)}"/>
        </event>
    </node>
    <task-node end-tasks="true" name="(VCiv) Aguardando expedição de alvará(s)">
        <task name="(VCiv) Aguardando expedição de alvará(s)" swimlane="Secretaria">
            <controller>
                <variable name="aviso1" mapped-name="textAlert:aviso1" access="read,write"/>
            </controller>
        </task>
        <description><![CDATA[Variáveis:
1 - Aviso
Label: O processo foi encaminhado para duas tarefas distintas. Para expedir alvará, o usuário deverá acessar (VCiv) Expedir Alvará(s).]]></description>
        <transition to="(VCiv) Informar quantidade de alvarás" name="Expedir novo(s) alvará(s)"/>
        <transition to="Nó de Desvio - (VCiv) Encaminhar para preparação de alvarás" name="Nó de Desvio - (VCiv) Encaminhar para preparação de alvarás">
            <condition expression="#{true}"/>
        </transition>
        <transition to="Término" name="Encaminhar para análise de secretaria"/>
        <event type="task-create">
            <action expression="#{tramitacaoProcessualService.gravaVariavelTarefa('pje:tjrn:fluxo:var:sair_tarefa_expedir_alvara', 'true')}"/>
            <action expression="#{tramitacaoProcessualService.gravaVariavelTarefa('frameDefaultLeavingTransition', 'Encaminhar para análise de secretaria')}"/>
        </event>
        <event type="node-leave">
            <action expression="#{tramitacaoProcessualService.apagaVariavel('pje:fluxo:quantAlv')}"/>
            <action expression="#{tramitacaoProcessualService.apagaVariavel('quantidadeAlvaras')}"/>
        </event>
    </task-node>
    <node name="(VCiv) Apagar variaveis de fluxo">
        <transition to="Término" name="Término"/>
        <event type="node-enter">
            <action expression="#{tramitacaoProcessualService.apagaVariavel('pje:fluxo:quantAlv')}"/>
            <action expression="#{tramitacaoProcessualService.apagaVariavel('quantidadeAlvaras')}"/>
        </event>
    </node>
    <end-state name="Término"/>
    <task-node end-tasks="true" name="Nó de Desvio - (VCiv) Encaminhar para preparação de alvarás">
        <task name="Nó de Desvio - (VCiv) Encaminhar para preparação de alvarás"/>
        <transition to="Término" name="Término"/>
        <transition to="(VCiv) Informar quantidade de alvarás" name="(VCiv) Informar quantidade de alvarás"/>
        <transition to="(VCiv) Aguardando expedição de alvará(s)" name="(VCiv) Aguardando expedição de alvará(s)"/>
    </task-node>
    <process-state name="(VCiv) Deslocar secretaria unificada">
        <sub-process name="(SEC) Deslocamento para secretaria unificada" binding="late"/>
        <transition to="(VCiv) Informar quantidade de alvarás" name="(VCiv) Informar quantidade de alvarás"/>
        <event type="node-leave">
            <action expression="#{tramitacaoProcessualService.deslocarFluxoParaOrgaoDiverso()}"/>
            <action expression="#{entityManager.createNativeQuery('delete from jbpm_variableinstance where id_ in( select vi.id_ from jbpm_variableinstance vi join jbpm_processinstance pi on (pi.id_= vi.processinstance_) join tb_processo_instance tpi on (tpi.id_proc_inst = pi.id_) join tb_processo tp on (tpi.id_processo = tp.id_processo) where tp.nr_processo = :numeroProcesso and name_ in (\'pje:fluxo:deslocamento:orgaoCargoDestino,pje:fluxo:deslocamento:orgaoDestino\') order by id_ desc)').setParameter('numeroProcesso', tramitacaoProcessualService.recuperaProcesso().getProcesso().getNumeroProcesso()).executeUpdate()}"/>
        </event>
    </process-state>  
    <!-- PROCESS-EVENTS -->
    <event type="superstate-enter">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="process-start">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="before-signal">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="subprocess-created">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-create">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="transition">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-assign">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="after-signal">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="timer">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-start">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="subprocess-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="node-leave">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="process-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="superstate-leave">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="node-enter">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event> 
</process-definition>
